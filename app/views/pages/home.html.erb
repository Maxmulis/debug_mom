<div class="home-container">
  <div>
    <%= image_tag "home_girl.png" %>
  </div>

  <br><br>

  <div class="home-text">
    <h1 class="ml9">
    <span class="text-wrapper">
    <span class="letters">DEBUG.mom</span>
    </span>
    </h1>
    <p>Helps solving tech issues</p>
  </div>

  <div class="buttons-home">
    <%= link_to "I need help", new_ticket_path, class: "btn btn-yellow btn-yellow-home" %>
    <br> <br>
    <% if current_user.nil? %>
      <%= link_to "I can offer help", users_sign_in_path, class: "btn btn-black btn-black-home" %>
    <% else %>
      <%= link_to "I can offer help", helper_path(current_user.id), class: "btn btn-black btn-black-home" %>
    <% end %>
  </div>


</div><!--#container-->


