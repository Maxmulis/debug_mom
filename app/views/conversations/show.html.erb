<h1>#<%= @conversation.name %></h1>
<h3>Current user: <%= current_user.username  %></h3>
<div id="messages" data-conversation-id="<%= @conversation.id %>">
  <% @conversation.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.username %></span>
        <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @ticket, @conversation, @message ], remote: true  do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@conversation.name}" %>
<% end %>
